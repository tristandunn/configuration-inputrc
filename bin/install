#!/bin/bash

PWD="$(pwd)"
NAME="inputrc"
FILE="$HOME/.$NAME"
PREFIX="# {{{ $NAME ($PWD)"
SUFFIX="# }}}"

if [ -L "$FILE" ]; then
  echo "Failed to install $NAME plug-in: "
  echo "  $FILE exists as a symbolic link."
elif [ -f "$FILE" ]; then
  if ! grep -q "$PREFIX" "$FILE"; then
    echo "$PREFIX" >> "$FILE" && \
      cat "$PWD/src/$NAME" >> "$FILE" && \
      echo "$SUFFIX" >> "$FILE" && \
      echo "Installed $NAME plug-in."
  fi
else
  echo "$PREFIX" > "$FILE" && \
    cat "$PWD/src/$NAME" >> "$FILE" && \
    echo "$SUFFIX" >> "$FILE" && \
    echo "Installed $NAME plug-in."
fi
